<section id="account" class="global-grid">
    <div>
        <section id="log-in">
            <h2>Log in</h2>
            <ul>
                <li><input type="text" placeholder="Username" class="input"></li>
                <li><input type="text" placeholder="Password" class="input"></li>
                <li><button class="button"><h3>Log in</h3></button></li>
            </ul>
        </section>
        <section id="create-ac">
            <h2>Create Account</h2>
            <ul>
                <li><input type="text" placeholder="Enter Email" class="input"></li>
                <li><input type="text" placeholder="Phone Number" class="input"></li>
                <li><input type="text" placeholder="Address 1" class="input"></li>
                <li><input type="text" placeholder="Address 2" class="input"></li>
                <li><input type="text" placeholder="Password (at least 8 characters)" class="input"></li>
                <li><input type="text" placeholder="Re-enter Password" class="input"></li>
                <li id="terms"> 
                    <section></section>
                    <aside><p>Terms of service</p></aside>
                </li>
                <li><button class="button"><h3>Create</h3></button></li>
            </ul>
        </section>
    </div>
</section>